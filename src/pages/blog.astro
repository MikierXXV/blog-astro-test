---
import BaseLayout from '../layouts/BaseLayout.astro';
import BlogPost from '../components/BlogPost.astro';
const allPosts = await Astro.glob('../pages/posts/*.md');
const pageTitle = "Blog Page";
---
<BaseLayout pageTitle={pageTitle}>
  <h1>Mi blog de Astro aprendizaje</h1>
  <p>Aqu√≠ es donde voy a postear sobre mi viaje de aprendizaje Astro.</p>
  <ul>
    {allPosts.map((post) => <BlogPost url={post.url} title={post.frontmatter.title}></BlogPost>)}
  </ul>
</BaseLayout>
